# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh text eol=lf

# Python files
*.py text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.vue text eol=lf
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.sqlite binary
*.sqlite3 binary
